extends layout

block header
  h1 Tomorrow

block content
  h2 Tomorrow's Workout
  p Run 5 miles at 7:30 pace.
  p: a(href="/") Do another workout today &raquo;

  ul(data-role="listview")
    li(data-role="list-divider") Upcoming Workouts
    li Tuesday - Tempo Run
    li Thursday - Speedwork
    li Saturday - Long Run
    li(data-role="list-divider") Previous Workouts
    li &#x2713; Tuesday - Tempo Run
    li &#x2717; Thursday - Speedwork
    li &#x2713; Saturday - Long Run

block footer
  mixin footer("go")
