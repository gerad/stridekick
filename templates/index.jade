html(lang='en')
  head
    block head
      meta(charset='utf-8')
      title
        block title
          = locals.name
      link(rel='stylesheet', href='css/index.css')
  body
    #phone
      #time
      iframe(src="welcome.html")

  script
    (function() {
      var time = document.getElementById("time"),
          now = new Date,
          h = now.getHours(),
          m = now.getMinutes(),
          p = h < 12 ? 'AM' : 'PM';
      if (h === 0)
        h = 12;
      else if (h > 12)
        h -= 12;
      if (m < 10)
        m = '0' + m

      time.innerHTML = h + ':' + m + ' ' + p;
    })();
