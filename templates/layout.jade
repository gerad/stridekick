- var pagename = page.filename.split('.')[0]
!!! 5
html(lang='en')
  head
    block head
      meta(charset='utf-8')
      title
        block title
          = locals.name
      link(rel='stylesheet', href='css/normalize.css')
      link(rel='stylesheet', href='css/layout.css')
      if contents.css[pagename + '.styl']
        link(rel='stylesheet', href="css/#{pagename}.css")
  body(class=pagename)
    block content
      TBD
    script(src="//cdnjs.cloudflare.com/ajax/libs/jquery/1.8.0/jquery-1.8.0.js")
    script(src="//cdnjs.cloudflare.com/ajax/libs/underscore.js/1.3.3/underscore.js")
    script(src="//cdnjs.cloudflare.com/ajax/libs/backbone.js/0.9.2/backbone-min.js")
    each val, name in contents.js.lib
      script(src="js/lib/#{name.replace(/\.coffee$/, '.js')}")
    if contents.js[pagename + '.coffee']
      script(src="js/#{pagename}.js")
